<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}DECOR-PUB{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/bootstrap/css/bootstrap-theme.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/ckeditor/contents.css') }}" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />

  {% endblock %}
</head>

<body>
{% include "::nav-bar.html.twig" %}

  <div class="container">
    <div id="header" class="jumbotron">
      <table width="100%">
        <tr>
          <td width="70%">
      <h1><a href="{{ path('tg_prod_home')}}" class="no-style">DECOR-PUB</a></h1>
      <p>
        Suivi de production
      </p>
          </td>
          <div align="right">
          {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <td>{{ include('TGAdminBundle:Admin:recette.html.twig') }}</td>
          </div>
        {% endif %}
        </tr>
      </table> 
    </div>
      <div class="row">

        <div id="menu" class="col-md-2">
{% if is_granted('ROLE_STAGIAIRE') %}
  <h3>La boîte à outils</h3>
  <ul class="nav nav-pills nav-stacked">
    <li><a href="{{ path('tg_prod_home') }}">Liste des projets</a></li>
    <li><a href="{{ path('tg_client_home') }}">Liste des clients</a></li>
    <li><a href="{{ path('tg_contact_home') }}">Liste des contacts</a></li>
  </ul>
        {#   <h3>Les Projets</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('tg_prod_home')}}">Accueil</a></li>
          </ul>
          
          <h4>Derniers projets</h4>
          {{ render(controller("TGProdBundle:Projet:menu", {'limit': 3})) }}
        {% endif %}
{% if is_granted('ROLE_ATELIER') %}
          <h3>Les Clients</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('tg_client_home') }}">Accueil</a></li>
          </ul>

          <h4>Derniers clients</h4>
          {{ render(controller("TGClientBundle:Client:menu", {'limit': 3})) }} #}
        {% endif %} 
        </div>
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div id="content" class="col-md-10">
            {% for flashMessage in app.session.flashbag.get('info') %}
              <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
              </div>
            {% endfor %}
          {% endif %}
          {% block body %}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>

  <hr>

  <footer align="center">
    <p>Technograv | Decor Pub © {{ 'now'|date('Y') }}</p>
  </footer>
</div>

{% block javascripts %}
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="{{ asset('bundles/tgadmin/bootstrap/js/bootstrap.min.js') }}"></script>
  <script src="{{ asset('bundles/tgadmin/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

</body>
</html>
