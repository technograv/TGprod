<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}DECOR-PUB{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/bootstrap/css/bootstrap-theme.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/tgadmin/ckeditor/contents.css') }}" />

  {% endblock %}
</head>

<body>
{% include "::nav-bar.html.twig" %}

  <div class="container">
    <div id="header" class="jumbotron">
      <table width="100%">
        <tr>
          <td width="50%">
      <h1>DECOR-PUB</h1>
      <p>
        Suivi de production
      </p>
          </td>
          {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <td>{{ include('TGAdminBundle:Admin:recette.html.twig') }}</td>
        {% endif %}
        </tr>
      </table> 
    </div>
    {% if is_granted('ROLE_ATELIER') %}
      <div class="row">

        <div id="menu" class="col-md-2">

          <h4>Derniers projets</h4>
          {{ render(controller("TGProdBundle:Projet:menu", {'limit': 3})) }}

          <h3>Les Clients</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('tg_client_home') }}">Accueil</a></li>
            <li><a href="{{ path('tg_client_add') }}">Ajouter un client</a></li>
          </ul>

          <h4>Derniers clients</h4>
          {{ render(controller("TGClientBundle:Client:menu", {'limit': 3})) }}
        </div>

        <div id="content" class="col-md-10">
            {% for flashMessage in app.session.flashbag.get('info') %}
              <div class="alert alert-success alert dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
              </div>
            {% endfor %}
          {% endif %}
          {% block body %}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>

  <hr>

  <footer align="center">
    <p>Technograv | Decor Pub Â© {{ 'now'|date('Y') }}</p>
  </footer>
</div>

{% block javascripts %}
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="{{ asset('bundles/tgadmin/bootstrap/js/bootstrap.min.js') }}"></script>
  <script src="{{ asset('bundles/tgadmin/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

</body>
</html>